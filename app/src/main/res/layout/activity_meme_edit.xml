<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meme_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dinosilvestro.mememaker.MemeEditActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/colorAccent"
        tools:targetApi="lollipop"/>

    <ImageView
        android:id="@+id/meme_edit_image_view"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/meme_edit_image_content_description"
        android:scaleType="centerCrop"
        tools:src="@drawable/com_facebook_button_like_background"/>

    <EditText
        android:id="@+id/top_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/top_text_hint"/>

    <EditText
        android:id="@+id/bottom_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_edit_text"
        android:hint="@string/bottom_text_hint"/>

    <TextView
        android:id="@+id/top_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/meme_edit_image_view"
        android:layout_alignStart="@+id/meme_edit_image_view"
        android:layout_alignTop="@+id/meme_edit_image_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:shadowColor="@color/colorPrimaryText"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
        android:textColor="@color/colorIcon"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/bottom_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meme_edit_image_view"
        android:layout_alignEnd="@+id/meme_edit_image_view"
        android:layout_alignStart="@+id/meme_edit_image_view"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:shadowColor="@color/colorPrimaryText"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
        android:textColor="@color/colorIcon"
        android:textSize="50sp"/>

</RelativeLayout>
